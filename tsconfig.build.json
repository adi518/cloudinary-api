{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "target": "es5",
    "types": [
      "@types/jest",
      "node"
    ],
    "lib": ["es6", "dom", "es7"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/__tests/*.test.ts",
    "dist",
    "__tests__"
  ]
 }
 